{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,           // Starting with false to make initial conversion easier
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,            // Allow JavaScript files to be compiled
    "checkJs": false            // Don't type-check JavaScript files
  },
  "include": [
    "api/**/*",
    "backend/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "*.js"  // Exclude JavaScript files in the root directory
  ]
}
