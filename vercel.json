{
  "version": 2,
  "builds": [
    { "src": "dist/api/**/*.js", "use": "@vercel/node" },
    { "src": "dist/public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/dist/api/$1.js" },
    { "src": "/client.bundle.js", "dest": "/dist/public/client.bundle.js" },
    { "src": "/config.bundle.js", "dest": "/dist/public/config.bundle.js" },
    { "src": "/styles.css", "dest": "/dist/public/styles.css" },
    { "src": "/", "dest": "/dist/public/index.html" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ],
  "installCommand": "npm install && npm run build"
}
